extends layout

block content
  div(class="container")
    div(class="row")
      div(class="col-sm-9 col-md-7 col-lg-5 mx-auto")
        div(class="card")
          div(class="card-body")
            h3(class="card-title text-center") Update corona cases
            a(class="d-block text-center", href="/") Corona cases
            div(class="form-group")
              label(for="country") Country
              select(class="form-control", id="country")
            div(class="form-group")
              label(for="cases") Cases
              input(class="form-control", type="number", id="cases")
            a(class="btn btn-primary d-block", href="#") Update
  script(src="/javascripts/update.js")